<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>@ViewBag.Title - Hackbal Cyber POS</title>
    
     <link rel="stylesheet" href="~/AdminPanel/components/bootstrap/dist/css/bootstrap.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/font-awesome/css/font-awesome.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/Ionicons/css/ionicons.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/datatables.net-bs/css/dataTables.bootstrap.min.css" />
     <link rel="stylesheet" href="~/css/AdminPanel/css/AdminLTE.min.css" />
     <link rel="stylesheet" href="~/css/AdminPanel/css/skins/skin-purple.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/morris.js/morris.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/jvectormap/jquery-jvectormap.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/plugins/bootstrap-slider/slider.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/select2/dist/css/select2.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/bootstrap-colorpicker/dist/css/bootstrap-colorpicker.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/plugins/timepicker/bootstrap-timepicker.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/plugins/iCheck/all.css" />
     <link rel="stylesheet" href="~/AdminPanel/plugins/pace/pace.min.css" />
     <link rel="stylesheet" href="~/AdminPanel/components/fullcalendar/dist/fullcalendar.min.css" />


    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    @if (IsSectionDefined("Styles"))
    {
        @RenderSection("Styles", required: false)
    }
</head>
<body class="hold-transition fixed skin-purple sidebar-mini">

    <div class="wrapper">

        <header class="main-header">
    <!-- Logo -->
    <a href="#" class="logo">
        <!-- mini logo for sidebar mini 50x50 pixels -->
        <span class="logo-mini"><b>CPOS</b></span>
        <!-- logo for regular state and mobile devices -->
        <span class="logo-lg"><b>EDUJOY</b> 360</span>
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
        <!-- Sidebar toggle button-->
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">Toggle navigation</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
              
                <!-- User Account: style can be found in dropdown.less -->
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/Content/AdminPanel/img/admin.png" class="user-image" alt="User Image">
                        <span class="hidden-xs">Admin</span>
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/Content/AdminPanel/img/admin.png" class="img-circle" alt="User Image">
                            <p>
                                 Admin
                                @*<small>Member since Nov. 2012</small>*@
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                         
                            <!-- /.row -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="pull-left">
                                @*<a href="#" class="btn btn-default btn-flat">Profile</a>*@
                            </div>
                            <div class="pull-right">
                                <a href="~/Account/Logout" class="btn btn-default btn-flat">Sign out</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- Control Sidebar Toggle Button -->
                @*<li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>*@
            </ul>
        </div>
    </nav>
</header>


        
<aside class="main-sidebar sidebarscroll">
    <section class="sidebar">
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Content/AdminPanel/img/admin.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>Admin</p>
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>
        <ul class="sidebar-menu" data-widget="tree">
            <li class="header">MAIN NAVIGATION</li>


            <li class="">
                <a href="@Url.Action("Index", "ProductCategory")">
                    <i class="fa fa-globe"></i> <span>Product Category</span>
                    <i class="fa fa-angle-right pull-right"></i>
                </a>
            </li>

        </ul>
    </section>
</aside>
@section Scripts
{

}

        @RenderBody()

       <footer class="main-footer">
    <div class="pull-right hidden-xs">
        <b>Version</b> 1.0
    </div>
    <strong>Copyright &copy; 2020 <a href="https://www.hackbal.com">Hackbal Teamz</a>.</strong> All rights
    reserved.
</footer>


        <div class="control-sidebar-bg"></div>
    </div>
    @*Error Model*@
    <!-- The Modal -->
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="alert alert-danger text-center" role="alert">
                <div id="errormsg"></div>
            </div>
        </div>
    </div>
    @*Error Model*@
    <link rel="stylesheet" href="~/AdminPanel/components/jquery/dist/jquery.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/fastclick/lib/fastclick.js" />
    <link rel="stylesheet" href="~/AdminPanel/js/adminlte.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/plugins/bootstrap-slider/bootstrap-slider.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/datatables.net/js/jquery.dataTables.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/datatables.net-bs/js/dataTables.bootstrap.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/bootstrap-daterangepicker/daterangepicker.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/moment/moment.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/jquery-ui/jquery-ui.min.js" />
    <link rel="stylesheet" href="~/AdminPanel/components/bootstrap/dist/js/bootstrap.min.js" />

    <script>
        @if(ViewBag.Error != null) {
        <text>
        $('#myModal').modal('show');
        $('#errormsg').text("@ViewBag.Error");
        </text>
        }
        setTimeout(function () { $('#myModal').modal('hide'); }, 2000);
    </script>
    @RenderSection("scripts", required: false)

</body>
</html>
